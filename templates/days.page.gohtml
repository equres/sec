{{ template "base" .}}

{{ define "head"}}
    <title>Equres > {{ .MonthString }}, {{ .Year }} Company Filings</title>
    <meta name="description" content="All the days that include filings in the month {{.MonthString}}, {{ .Year }}">
    <meta name="keywords" content="sec, cik, security and exchange commission, days, companies, {{ .MonthString }}, {{ .Year }}">
{{ end }}

{{ define "content"}}
    <h3>Financial Filings For {{.MonthString}}, {{.Year}}</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Day</th>
            </tr>
        </thead>
        <tbody>
            {{ range $Day, $IsAvailable := .Days }}
                <tr>
                    {{ if $IsAvailable }}
                    <td><a href="/filings/{{ $.Year }}/{{ $.Month }}/{{ $Day }}">{{ $Day }}</a></td>
                    {{ else }}
                    <td><a disabled="disabled">{{ $Day }}</a></td>
                    {{ end }}
                </tr>
            {{ end }}
        </tbody>
    </table>
{{ end }}